<?xml version="1.0" encoding="UTF-8"?>
<OfficeApp
  xmlns="http://schemas.microsoft.com/office/appforoffice/1.1"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:bt="http://schemas.microsoft.com/office/officeappbasictypes/1.0"
  xmlns:mailappor="http://schemas.microsoft.com/office/mailappversionoverrides"
  xsi:type="MailApp">

  <Id>11111111-7890-1234-5678-9abcde000001</Id>
  <Version>1.0.0.0</Version>
  <ProviderName>CAU</ProviderName>
  <DefaultLocale>en-US</DefaultLocale>
  <OfficeAppType>Mail</OfficeAppType>
  <DisplayName DefaultValue="CAU Signature Pro"/>
<Description DefaultValue="Professional CAU Email Signatures"/>


  <IconUrl DefaultValue="https://signature.cau.edu.tr/assets/icon-80.png"/>
  <HighResolutionIconUrl DefaultValue="https://signature.cau.edu.tr/assets/icon-80.png"/>
  <SupportUrl DefaultValue="https://www.cau.edu.tr"/>

  <AppDomains>
    <AppDomain>https://signature.cau.edu.tr</AppDomain>
  </AppDomains>

  <Hosts>
    <Host Name="Mailbox"/>
  </Hosts>

  <Requirements>
    <Sets>
      <Set Name="Mailbox" MinVersion="1.3"/>
    </Sets>
  </Requirements>

  <!-- This identifies the package as a Mail Compose add-in -->
  <FormSettings>
    <Form xsi:type="ItemEdit">
      <DesktopSettings>
        <SourceLocation DefaultValue="https://signature.cau.edu.tr/taskpane.html"/>
        <RequestedHeight>300</RequestedHeight>
      </DesktopSettings>
    </Form>
  </FormSettings>

  <Permissions>ReadWriteItem</Permissions>


  <!-- Activation rule must match ItemEdit -->
  <Rule xsi:type="RuleCollection" Mode="Or">
    <Rule xsi:type="ItemIs" ItemType="Message" FormType="Edit"/>
  </Rule>

  <DisableEntityHighlighting>false</DisableEntityHighlighting>

  <VersionOverrides
    xmlns="http://schemas.microsoft.com/office/mailappversionoverrides"
    xsi:type="VersionOverridesV1_1">

    <Hosts>
      <Host xsi:type="MailHost">
        <DesktopFormFactor>
          <FunctionFile resid="Commands.Url"/>

          <ExtensionPoint xsi:type="MessageComposeCommandSurface">
            <OfficeTab id="TabDefault">
              <Group id="cauSignatureGroup">
                <Label resid="GroupLabel"/>

                <Control xsi:type="Button" id="InsertSignatureButton">
                  <Label resid="TaskpaneButton.Label"/>
                  <Supertip>
                    <Title resid="TaskpaneButton.Label"/>
                    <Description resid="TaskpaneButton.Tooltip"/>
                  </Supertip>
                  <Icon>
                    <bt:Image size="16" resid="Icon.16x16"/>
                    <bt:Image size="32" resid="Icon.32x32"/>
                    <bt:Image size="80" resid="Icon.80x80"/>
                  </Icon>
                  <Action xsi:type="ShowTaskpane">
                    <SourceLocation resid="Taskpane.Url"/>
                  </Action>
                </Control>

              </Group>
            </OfficeTab>
          </ExtensionPoint>

        </DesktopFormFactor>
      </Host>
    </Hosts>

    <Resources>
      <bt:Images>
        <bt:Image id="Icon.16x16" DefaultValue="https://signature.cau.edu.tr/assets/icon-16.png"/>
        <bt:Image id="Icon.32x32" DefaultValue="https://signature.cau.edu.tr/assets/icon-32.png"/>
        <bt:Image id="Icon.80x80" DefaultValue="https://signature.cau.edu.tr/assets/icon-80.png"/>
      </bt:Images>

      <bt:Urls>
        <bt:Url id="Taskpane.Url" DefaultValue="https://signature.cau.edu.tr/taskpane.html"/>
        <bt:Url id="Commands.Url" DefaultValue="https://signature.cau.edu.tr/commands.html"/>
      </bt:Urls>

      <bt:ShortStrings>
        <bt:String id="GroupLabel" DefaultValue="CAU Signatures"/>
        <bt:String id="TaskpaneButton.Label" DefaultValue="Insert Signature"/>
      </bt:ShortStrings>

      <bt:LongStrings>
        <bt:String id="TaskpaneButton.Tooltip" DefaultValue="Insert your official CAU email signature"/>
      </bt:LongStrings>
    </Resources>

    <WebApplicationInfo>
      <Id>36ba053f-fc5d-43c7-a517-f633002a0025</Id>
      <Resource>api://36ba053f-fc5d-43c7-a517-f633002a0025</Resource>
      <Scopes>
        <Scope>user.read</Scope>
        <Scope>profile</Scope>
        <Scope>email</Scope>
      </Scopes>
    </WebApplicationInfo>

  </VersionOverrides>

</OfficeApp>
