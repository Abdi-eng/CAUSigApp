<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<OfficeApp xsi:type="MailApp" xmlns="http://schemas.microsoft.com/office/appforoffice/1.1" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:bt="http://schemas.microsoft.com/office/officeappbasictypes/1.0" xmlns:mailappor="http://schemas.microsoft.com/office/mailappversionoverrides" xmlns:m="http://schemas.microsoft.com/office/mailappversionoverrides">
  <!-- 1. IMPORTANT: We will change this ID in the next step -->
  <Id>569103c8-0482-4f05-8664-9a8f94b2d0a0</Id>
  <Version>1.0.0.4</Version>
  <ProviderName>Contoso</ProviderName>
  <DefaultLocale>en-US</DefaultLocale>
  <DisplayName DefaultValue="CAU Signature App" />
  <Description DefaultValue="Inserts company signature" />
  <IconUrl DefaultValue="https://jolly-field-081c59603.2.azurestaticapps.net/assets/logo.png" />
  <HighResolutionIconUrl DefaultValue="https://jolly-field-081c59603.2.azurestaticapps.net/assets/logo.png" />
  <SupportUrl DefaultValue="https://www.contoso.com" />
  <AppDomains>
    <AppDomain>https://jolly-field-081c59603.2.azurestaticapps.net</AppDomain>
  </AppDomains>
  <Hosts>
    <Host Name="Mailbox" />
  </Hosts>
  <Requirements>
    <Sets>
      <Set Name="Mailbox" MinVersion="1.1" />
    </Sets>
  </Requirements>
  <FormSettings>
    <Form xsi:type="ItemRead">
      <DesktopSettings>
        <SourceLocation DefaultValue="https://abdi-eng.github.io/CAUSigApp/taskpane.html" />
        <RequestedHeight>250</RequestedHeight>
      </DesktopSettings>
    </Form>
  </FormSettings>
  <Permissions>ReadWriteItem</Permissions>
  <Rule xsi:type="RuleCollection" Mode="Or">
    <Rule xsi:type="ItemIs" ItemType="Message" FormType="Read" />
  </Rule>
  <DisableEntityHighlighting>false</DisableEntityHighlighting>
  
  <VersionOverrides xmlns="http://schemas.microsoft.com/office/mailappversionoverrides" xsi:type="VersionOverridesV1_0">
    <Requirements>
      <bt:Sets DefaultMinVersion="1.3">
        <bt:Set Name="Mailbox" />
      </bt:Sets>
    </Requirements>
    <Hosts>
      <Host xsi:type="MailHost">
        <DesktopFormFactor>
          <FunctionFile resid="Commands.Url" />
          
          <!-- BUTTON FOR READING EMAILS -->
          <ExtensionPoint xsi:type="MessageReadCommandSurface">
            <OfficeTab id="TabDefault">
              <Group id="msgReadGroup">
                <Label resid="GroupLabel" />
                <Control xsi:type="Button" id="msgReadOpenPaneButton">
                  <Label resid="TaskpaneButton.Label" />
                  <Supertip>
                    <Title resid="TaskpaneButton.Label" />
                    <Description resid="TaskpaneButton.Tooltip" />
                  </Supertip>
                  <Icon>
                    <bt:Image size="16" resid="Icon.16x16" />
                    <bt:Image size="32" resid="Icon.32x32" />
                    <bt:Image size="80" resid="Icon.80x80" />
                  </Icon>
                  <Action xsi:type="ShowTaskpane">
                    <SourceLocation resid="Taskpane.Url" />
                  </Action>
                </Control>
              </Group>
            </OfficeTab>
          </ExtensionPoint>

          <!-- BUTTON FOR WRITING EMAILS (Crucial Part) -->
          <ExtensionPoint xsi:type="MessageComposeCommandSurface">
            <OfficeTab id="TabDefault">
              <Group id="msgComposeGroup">
                <Label resid="GroupLabel" />
                <Control xsi:type="Button" id="msgComposeOpenPaneButton">
                  <Label resid="TaskpaneButton.Label" />
                  <Supertip>
                    <Title resid="TaskpaneButton.Label" />
                    <Description resid="TaskpaneButton.Tooltip" />
                  </Supertip>
                  <Icon>
                    <bt:Image size="16" resid="Icon.16x16" />
                    <bt:Image size="32" resid="Icon.32x32" />
                    <bt:Image size="80" resid="Icon.80x80" />
                  </Icon>
                  <Action xsi:type="ShowTaskpane">
                    <SourceLocation resid="Taskpane.Url" />
                  </Action>
                </Control>
              </Group>
            </OfficeTab>
          </ExtensionPoint>
        </DesktopFormFactor>
      </Host>
    </Hosts>
    <Resources>
      <bt:Images>
        <!-- Icons -->
        <bt:Image id="Icon.16x16" DefaultValue="https://jolly-field-081c59603.2.azurestaticapps.net/assets/logo.png" />
        <bt:Image id="Icon.32x32" DefaultValue="https://jolly-field-081c59603.2.azurestaticapps.net/assets/logo.png" />
        <bt:Image id="Icon.80x80" DefaultValue="https://jolly-field-081c59603.2.azurestaticapps.net/assets/logo.png" />
      </bt:Images>
      <bt:Urls>
        <!-- Notice: We removed "/src/taskpane/" and just used "/taskpane.html" -->
        <bt:Url id="Taskpane.Url" DefaultValue="https://jolly-field-081c59603.2.azurestaticapps.net/taskpane.html" />
        
        <!-- Notice: We removed "/src/commands/" and just used "/commands.html" -->
        <bt:Url id="Commands.Url" DefaultValue="https://jolly-field-081c59603.2.azurestaticapps.net/commands.html" />
      </bt:Urls>
      
      <!-- Keep your Strings the same -->
      <bt:ShortStrings>
        <bt:String id="GroupLabel" DefaultValue="CAU Signatures" />
        <bt:String id="TaskpaneButton.Label" DefaultValue="Insert Signature" />
      </bt:ShortStrings>
      <bt:LongStrings>
        <bt:String id="TaskpaneButton.Tooltip" DefaultValue="Click to insert your signature" />
      </bt:LongStrings>
    </Resources>
    <WebApplicationInfo>
      <!-- This matches your "appId" from the JSON -->
      <Id>36ba053f-fc5d-43c7-a517-f633002a0025</Id>
      
      <!-- This matches your "identifierUris" from the JSON -->
      <Resource>api://jolly-field-081c59603.2.azurestaticapps.net/36ba053f-fc5d-43c7-a517-f633002a0025</Resource>
      
      <Scopes>
        <Scope>user.read</Scope>
        <Scope>user.read.all</Scope>
      </Scopes>
    </WebApplicationInfo>
  </VersionOverrides>
</OfficeApp>